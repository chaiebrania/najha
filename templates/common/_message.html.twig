{% for label, msgs in app.flashes %}
    {% for msg in msgs %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ msg|raw|nl2br }}
        </div>
    {% endfor %}
{% endfor %}