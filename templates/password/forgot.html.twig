{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}
    Mot de passe oublié
{% endblock %}

{% block body %}
<div class="login-box">
    <div class="login-logo">

    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-header text-center">
            <h3>Mot de passe oublié</h3>
            <p class="text-muted">
                Afin de recevoir un email de réinitialisation de votre mot de passe, veuillez nous envoyez votre demande
            </p>
        </div>
        <div class="card-body login-card-body">
            
            {% include 'common/_message.html.twig' %}

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
            <div class="form-group">
                {{form_row(form.email)}}
            </div>

            <div class="form-group">
                <button class="btn btn-block btn-primary" type="submit">
                    Réinitialiser mon mot de passe
                </button>
            </div>
            {{form_rest(form)}}
            {{form_end(form)}}

        </div>
        <div class="card-footer d-flex flex-row flex-wrap align-items-center justify-content-between">
            <a href="{{ path('app_login') }}">Retour à la page de connexion</a>
        </div>
        <!-- /.login-card-body -->
    </div>

</div>
{% endblock %}
